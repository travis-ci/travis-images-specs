#!/usr/bin/env bash
set -o errexit

export DISPLAY=:99.0

sh -e /etc/init.d/xvfb start

: ${RSPEC_TAGS:=}
: ${RSPEC_OPTS:=}

if ! sudo -n true 2>/dev/null ; then
  RSPEC_TAGS="${RSPEC_TAGS} ~sudo"
fi

for tag in ${RSPEC_TAGS} ; do
  RSPEC_OPTS="${RSPEC_OPTS} --tag ${tag}"
done

export RSPEC_OPTS

set -o xtrace
exec bundle exec rake
