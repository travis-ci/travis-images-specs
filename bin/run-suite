#!/usr/bin/env bash
set -o errexit

export DISPLAY=:99.0

sh -e /etc/init.d/xvfb start

: ${RSPEC_TAGS:=}

if ! sudo -n true ; then
  RSPEC_TAGS="${RSPEC_TAGS} --tag ~sudo"
fi

for arg in "$@" ; do
  RSPEC_TAGS="${RSPEC_TAGS} --tag ${arg}"
done

set -o xtrace
exec bundle exec rspec ${RSPEC_TAGS} ./spec
